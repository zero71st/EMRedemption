@model IEnumerable<RedemptionViewModel>

@{
    ViewData["Title"] = "Manage Redemptions";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>PROCESS REDEMPTIONS</h3>
<hr />
@*<div class="page-header">
    </div>*@
<p>
    <a class="btn btn-default">
        <span class="glyphicon glyphicon-cog" aria-hidden="true"></span>Process Stock
    </a>
</p>

<form class="form-inline">
    <div class="form-group">
        <select class="form-control" id="sel1">
            <option>Pending Process Stock</option>
            <option>Processed Stock</option>
            <option>All</option>
        </select>
    </div>
    @*<div class="form-group">
        <div class='input-group date' id='datetimepicker1'>
            <input type='text' class="form-control" />
            <span class="input-group-addon">
                <span class="glyphicon glyphicon-calendar"></span>
            </span>
        </div>
    </div>*@

    <script type="text/javascript">
        $(function () {
            $('#datetimepicker1').datetimepicker();
        });
    </script>

    <div class="form-group">
        <label class="sr-only">Search dealer name</label>
        <input type="text" class="form-control" id="exampleInputEmail3" placeholder="Search dealer name">
    </div>
    <button type="submit" class="btn btn-success"><span class="glyphicon glyphicon-search"></span></button>
</form>
<hr />
<table class="table">
    <thead>
        <tr>
            <th>
                #
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TransactionID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RetailerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RetailerStoreName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RetailerPhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RetailerEmailAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RedeemDateTime)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LineNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TransactionID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RetailerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RetailerStoreName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RetailerPhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RetailerEmailAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RedeemDateTime)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success btn-sm">
                    <span class="glyphicon glyphicon-send"></span>
                </a>
        </tr>
        }
    </tbody>
</table>
