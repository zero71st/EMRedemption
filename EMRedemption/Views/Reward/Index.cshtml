@model IEnumerable<RewardViewModel>

@{
    ViewData["Title"] = "Manage Rewards";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>REWARDS</h3>
<hr />

<p>
    <a class="btn btn-default" asp-action="Create">
        <span class="glyphicon glyphicon-plus"></span> New
    </a>

    <a class="btn btn-default" asp-action="Import">
        <span class="glyphicon glyphicon-import"></span>Import
    </a>
</p>

<form asp-controller="Reward" asp-action="Index" method="get" class="form-inline">
    <div class="form-group">
        <select class="form-control" id="sel1">
            <option>Available</option>
            <option>Is in used</option>
            <option>All</option>
        </select>
    </div>
    <div class="form-group">
        <label class="sr-only" for="exampleInputEmail3">Search code</label>
        <input name="search" type="text" class="form-control" placeholder="Search code">
    </div>

    <button type="submit" class="btn btn-success"><span class="glyphicon glyphicon-search"></span></button>
</form>

<hr />

<table class="table">
    <thead>
        <tr>
            <th>
                #
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SerialNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RewardType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AddBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AddDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsUsed)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LineNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SerialNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RewardType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AddBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AddDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsUsed)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id"><span class="glyphicon glyphicon-pencil"></span></a>
            </td>
        </tr>
        }
    </tbody>
</table>
